/* === Biến màu và font === */
@primary: #1976D2;
@primary-dark: #1565C0;
@secondary: #424242;
@success: #4CAF50;
@warning: #FF9800;
@error: #F44336;
@info: #2196F3;
@gray-bg: #F2F2F2;
@border: #ccc;
@border-radius: 8px;
@font: 'Segoe UI', 'Roboto', Arial, sans-serif;
@font-size: 13px;

/* === Toàn app === */
QWidget {
    font-family: @font;
    font-size: @font-size;
    background: @gray-bg;
    color: #222;
}

/* === QPushButton === */
QPushButton {
    font-size: @font-size;
    font-family: @font;
    padding: 6px 12px;
    min-height: 32px;
    max-height: 40px;
    border-radius: @border-radius;
    border: 1px solid @primary;
    background: white;
    color: @primary;
    transition: background 0.2s;
}
QPushButton:hover {
    background: #dbe9f4;
    color: @primary-dark;
}
QPushButton:pressed {
    background: @primary;
    color: white;
}
QPushButton:disabled {
    background: #eee;
    color: #aaa;
    border: 1px solid #eee;
}

/* === QTabWidget & TabBar === */
QTabBar::tab {
    padding: 6px 12px;
    border: 1px solid @border;
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    background: #f9f9f9;
    font-weight: normal;
    min-width: 100px;
    font-size: 13px;
}
QTabBar::tab:selected {
    background: white;
    font-weight: bold;
    color: @primary;
    border-bottom: 2px solid white;
}
QTabBar::tab:hover {
    background: #e3f2fd;
}
QTabWidget::pane {
    border: 1px solid @border;
    border-radius: 0 0 8px 8px;
    top: -1px;
    background: white;
}

/* === QTableWidget === */
QTableWidget, QTableView {
    font-size: @font-size;
    font-family: @font;
    background: white;
    border: 1px solid @border;
    border-radius: @border-radius;
    gridline-color: #e0e0e0;
}
QHeaderView::section {
    background: #f5f5f5;
    font-size: 14px;
    font-weight: bold;
    border: 1px solid #e0e0e0;
    padding: 6px 8px;
}
QTableWidget::item:selected, QTableView::item:selected {
    background: #dbe9f4;
    color: @primary-dark;
}
QTableWidget::item:hover, QTableView::item:hover {
    background: #e3f2fd;
}

/* === QLineEdit, QComboBox === */
QLineEdit, QComboBox {
    font-size: @font-size;
    font-family: @font;
    padding: 4px 8px;
    border-radius: 6px;
    border: 1px solid @border;
    background: white;
    min-height: 32px;
    max-height: 40px;
}
QLineEdit:focus, QComboBox:focus {
    border: 1.5px solid #007ACC;
    background: #f5faff;
}
QLineEdit[error="true"] {
    border: 1.5px solid @error;
    background: #fff6f6;
}

/* === QGroupBox === */
QGroupBox {
    border: 2px solid #E0E0E0;
    border-radius: 12px;
    margin-top: 15px;
    padding-top: 15px;
    background: white;
    font-weight: bold;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 10px 0 10px;
    color: @primary;
    background: white;
}

/* === QScrollBar (tối ưu cho touch/tablet) === */
QScrollBar:vertical, QScrollBar:horizontal {
    background: #f5f5f5;
    border-radius: 6px;
    width: 12px;
    margin: 2px;
}
QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #b0bec5;
    border-radius: 6px;
    min-height: 24px;
}
QScrollBar::handle:vertical:hover, QScrollBar::handle:horizontal:hover {
    background: #90caf9;
}

/* === Responsive spacing/layout === */
QVBoxLayout, QHBoxLayout, QGridLayout {
    spacing: 10px;
    margin: 12px;
}

/* === Tooltip, notification === */
QToolTip {
    background: #1976D2;
    color: white;
    border-radius: 6px;
    padding: 6px 12px;
    font-size: 13px;
}

/* === QLabel trạng thái === */
QLabel#error {
    color: @error;
    font-weight: bold;
}
QLabel#success {
    color: @success;
    font-weight: bold;
}
QLabel#info {
    color: @info;
    font-weight: bold;
}

/* === Notification Card hiện đại, nổi bật, bo góc lớn, icon lớn === */
