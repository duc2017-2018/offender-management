}
QFrame#notificationCardWarning {
    background: #FF9800;
    color: #222;
    border: none;
    border-radius: 16px;
    padding: 16px 24px;
    font-size: 15px;
    font-weight: 600;
    box-shadow: 0 4px 24px rgba(255, 152, 0, 0.18);
    min-height: 48px;
    max-width: 400px;
    display: flex;
    align-items: center;
}
QFrame#notificationCardSuccess {
    background: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 16px;
    padding: 16px 24px;
    font-size: 15px;
    font-weight: 600;
    box-shadow: 0 4px 24px rgba(76, 175, 80, 0.18);
    min-height: 48px;
    max-width: 400px;
    display: flex;
    align-items: center;
}
QFrame#notificationCardInfo {
    background: #1976D2;
    color: #fff;
    border: none;
    border-radius: 16px;
    padding: 16px 24px;
    font-size: 15px;
    font-weight: 600;
    box-shadow: 0 4px 24px rgba(25, 118, 210, 0.18);
    min-height: 48px;
    max-width: 400px;
    display: flex;
    align-items: center;
}
QLabel#notificationIcon {
    font-size: 28px;
    margin-right: 16px;
    min-width: 32px;
    min-height: 32px;
    vertical-align: middle;
}
QLabel#notificationTitle {
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    margin-bottom: 2px;
}
QFrame#notificationCardWarning QLabel#notificationTitle {
    color: #222;
}
QLabel#notificationMessage {
    color: #f5f5f5;
    background: transparent;
    border: none;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 0;
}
QFrame#notificationCardWarning QLabel#notificationMessage {
    color: #222;
}
QPushButton#notificationAction {
    background: #fff;
    color: #1976D2;
    border: none;
    border-radius: 8px;
    font-size: 13px;
    font-weight: bold;
    padding: 6px 16px;
    margin-left: 16px;
    min-height: 32px;
    transition: background 0.2s, color 0.2s;
}
QPushButton#notificationAction:hover {
    background: #dbe9f4;
    color: #1565C0;
}

/* Notification Title */
QLabel#notificationTitle {
    color: #212121;
    background: transparent;
    border: none;
}

/* Notification Message */
QLabel#notificationMessage {
    color: #616161;
    background: transparent;
    border: none;
    line-height: 1.4;
}

/* Notification Dismiss Button */
QPushButton#notificationDismiss {
    background: transparent;
    border: none;
    color: #9e9e9e;
    font-size: 12px;
    font-weight: bold;
    border-radius: 10px;
    min-height: 20px;
    max-height: 20px;
    padding: 0px;
}

QPushButton#notificationDismiss:hover {
    background: rgba(0, 0, 0, 0.1);
    color: #424242;
}

QPushButton#notificationDismiss:pressed {
    background: rgba(0, 0, 0, 0.2);
    color: #212121;
}

/* Notification Action Button */
QPushButton#notificationAction {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.1);
    color: #1976D2;
    border-radius: 6px;
    font-size: 10px;
    font-weight: 500;
    padding: 4px 8px;
}

QPushButton#notificationAction:hover {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(25, 118, 210, 0.3);
    color: #1565C0;
}

QPushButton#notificationAction:pressed {
    background: rgba(25, 118, 210, 0.1);
    color: #0d47a1;
}

/* Notification Container */
QWidget#notificationContainer {
    background: transparent;
    border: none;
}

/* Animation for notification appearance */
@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(100%);
    }
    to {
        opacity: 1;
        transform: translateX(0%);
    }
}

@keyframes fadeOut {
    from {
        opacity: 1;
        transform: translateX(0%);
    }
    to {
        opacity: 0;
        transform: translateX(100%);
    }
} 

