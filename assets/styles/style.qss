}
#SidebarWidget QPushButton:hover, #SidebarWidget QPushButton:focus {
    background: #1565C0;
    color: #fff;
    box-shadow: 0 2px 8px rgba(21, 101, 192, 0.10);
}
#SidebarWidget QPushButton:checked {
